---
const links = [
  {
    label: "About Us",
    href: "#about-us",
  },
  {
    label: "Events",
    href: "#events",
  },
  {
    label: "Gallery",
    href: "#gallery",
  },
  {
    label: "Articles",
    href: "#articles",
  },
];
---

<nav class="fixed top-0 z-50 inset-x-0">
  <div class="container-grid pt-6 items-center">
    <img width={95} height={30} src="/logo.webp" class="relative dark:hidden" />
    <img
      width={95}
      height={30}
      src="/logo-dark.webp"
      class="relative hidden dark:block"
    />

    <span class="text-sm font-light">Pontianak, Indonesia</span>

    <div class="flex gap-3 items-center">
      <button
        class="text-sm font-light day-toggler dark:hover:saturate-100 dark:saturate-0"
        >☀️</button
      >
      <button
        class="text-sm font-light saturate-0 night-toggler hover:saturate-100 dark:saturate-100"
        >🌙</button
      >
    </div>

    <div class="col-start-5 col-span-2 flex items-center gap-6 justify-end">
      <div class="flex gap-5 items-center">
        {
          links.map(({ label, href }) => (
            <a href={href} class="font-light text-sm">
              {label}
            </a>
          ))
        }
      </div>
      <div class="flex justify-end flex-none">
        <a
          href="/"
          class="text-sm leading-normal bg-foreground text-background font-semibold rounded-full py-1 px-3"
          >Join us</a
        >
      </div>
    </div>
  </div>
</nav>

<script>
  import { setTheme } from "../stores/theme-store.js";

  document.querySelector(".day-toggler").addEventListener("click", () => {
    setTheme("day");
  });
  document.querySelector(".night-toggler").addEventListener("click", () => {
    setTheme("night");
  });
</script>
